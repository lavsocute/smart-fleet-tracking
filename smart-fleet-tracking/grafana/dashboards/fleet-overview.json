            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "steps": [
                            {
                                "color": "red",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 1
                            },
                            {
                                "color": "green",
                                "value": 3
                            }
                        ]
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "rawSql": "SELECT COUNT(DISTINCT vehicle_id) AS \"Active Vehicles\" FROM vehicle_telemetry WHERE ts > NOW() - INTERVAL '5 minutes';",
                    "format": "table",
