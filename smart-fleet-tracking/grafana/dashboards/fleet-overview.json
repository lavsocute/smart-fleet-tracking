        {
            "title": "ðŸŽï¸ Max Speed (Last 5 min)",
            "type": "gauge",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 0
            },
            "datasource": {
                "type": "postgres",
                "uid": "DS_TIMESCALEDB"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "max": 150,
                    "min": 0,
                    "unit": "velocitykmh",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 60
                            },
                            {
                                "color": "orange",
                                "value": 80
                            },
                            {
                                "color": "red",
                                "value": 120
                            }
                        ]
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "rawSql": "SELECT COALESCE(MAX(speed), 0) AS \"Max Speed\" FROM vehicle_telemetry WHERE ts > NOW() - INTERVAL '5 minutes';",
                    "format": "table",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "ðŸ“ˆ Average Speed per Vehicle (5-min buckets)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 4
            },
            "datasource": {
                "type": "postgres",
                "uid": "DS_TIMESCALEDB"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "unit": "velocitykmh",
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 10,
                        "pointSize": 5,
                        "spanNulls": true
                    }
                },
                "overrides": []
            },
            "options": {
                "tooltip": {
                    "mode": "multi"
                },
                "legend": {
                    "displayMode": "table",
                    "placement": "right"
                }
            },
            "targets": [
                {
                    "rawSql": "SELECT time_bucket('5 minutes', ts) AS time, v.plate_number AS metric, ROUND(AVG(vt.speed)::numeric, 1) AS value FROM vehicle_telemetry vt JOIN vehicles v ON v.id = vt.vehicle_id WHERE $__timeFilter(ts) GROUP BY time, v.plate_number ORDER BY time;",
                    "format": "time_series",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "ðŸ—ºï¸ Latest Vehicle Positions",
            "type": "table",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 12
            },
            "datasource": {
                "type": "postgres",
                "uid": "DS_TIMESCALEDB"
            },
            "fieldConfig": {
                "defaults": {},
                "overrides": [
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Speed"
                        },
                        "properties": [
                            {
                                "id": "unit",
                                "value": "velocitykmh"
                            },
                            {
                                "id": "thresholds",
                                "value": {
                                    "mode": "absolute",
                                    "steps": [
                                        {
                                            "color": "green",
                                            "value": null
                                        },
                                        {
                                            "color": "orange",
                                            "value": 80
                                        },
                                        {
                                            "color": "red",
                                            "value": 120
                                        }
                                    ]
                                }
                            },
                            {
                                "id": "custom.displayMode",
                                "value": "color-background"
                            }
                        ]
                    },
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Engine"
                        },
                        "properties": [
                            {
                                "id": "mappings",
                                "value": [
                                    {
                                        "type": "value",
                                        "options": {
                                            "true": {
                                                "text": "ON"
                                            },
                                            "false": {
                                                "text": "OFF"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "targets": [
                {
                    "rawSql": "SELECT DISTINCT ON (vt.vehicle_id) v.plate_number AS \"Plate\", v.vehicle_type AS \"Type\", ROUND(vt.latitude::numeric, 4) AS \"Lat\", ROUND(vt.longitude::numeric, 4) AS \"Lng\", ROUND(vt.speed::numeric, 1) AS \"Speed\", vt.engine_status AS \"Engine\", vt.ts AS \"Last Seen\" FROM vehicle_telemetry vt JOIN vehicles v ON v.id = vt.vehicle_id ORDER BY vt.vehicle_id, vt.ts DESC;",
                    "format": "table",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "Recent Alerts",
            "type": "table",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 12
            },
            "datasource": {
                "type": "postgres",
                "uid": "DS_TIMESCALEDB"
            },
            "fieldConfig": {
                "defaults": {},
                "overrides": [
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Severity"
                        },
                        "properties": [
                            {
                                "id": "mappings",
                                "value": [
                                    {
                                        "type": "value",
                                        "options": {
                                            "CRITICAL": {
                                                "text": "CRITICAL",
                                                "color": "red"
                                            },
                                            "HIGH": {
                                                "text": "ðŸŸ  HIGH",
                                                "color": "orange"
                                            },
                                            "MEDIUM": {
                                                "text": "ðŸŸ¡ MEDIUM",
                                                "color": "yellow"
                                            },
                                            "LOW": {
                                                "text": "LOW",
                                                "color": "green"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "targets": [
                {
                    "rawSql": "SELECT a.triggered_at AS \"Time\", v.plate_number AS \"Vehicle\", a.alert_type AS \"Type\", a.severity AS \"Severity\", a.message AS \"Message\", CASE WHEN a.is_resolved THEN 'YES' ELSE 'NO' END AS \"Resolved\" FROM alerts a JOIN vehicles v ON v.id = a.vehicle_id ORDER BY a.triggered_at DESC LIMIT 20;",
                    "format": "table",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "Hourly Speed Stats (Continuous Aggregate)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 20
