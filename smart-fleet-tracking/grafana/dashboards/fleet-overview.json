                }
            },
            "targets": [
                {
                    "rawSql": "SELECT bucket AS time, CONCAT('Vehicle #', vehicle_id, ' avg') AS metric, ROUND(avg_speed::numeric, 1) AS value FROM vehicle_speed_hourly WHERE $__timeFilter(bucket) ORDER BY bucket;",
                    "format": "time_series",
                    "refId": "A"
                },
                {
                    "rawSql": "SELECT bucket AS time, CONCAT('Vehicle #', vehicle_id, ' max') AS metric, ROUND(max_speed::numeric, 1) AS value FROM vehicle_speed_hourly WHERE $__timeFilter(bucket) ORDER BY bucket;",
                    "format": "time_series",
                    "refId": "B"
                }
            ]
        },
